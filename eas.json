{
  "cli": {
    "version": ">= 3.15.1",
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "development": {
      "extends": "production",
      "distribution": "internal",
      "android": {
        "image": "default",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "image": "latest",
        "buildConfiguration": "Debug",
        "simulator": true
      }
    },
    "development:device": {
      "extends": "development",
      "distribution": "internal",
      "ios": {
        "image": "latest",
        "buildConfiguration": "Debug",
        "simulator": false
      }
    },
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "image": "latest",
        "simulator": true
      }
    },
    "preview": {
      "extends": "production",
      "distribution": "internal",
      "ios": {
        "image": "latest",
        "simulator": true
      },
      "android": {
        "image": "default",
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_BASE_API_URL_DEV": "https://dev-be.koratona.stryber.io/api/",
        "EXPO_PUBLIC_BASE_API_URL_PROD": "https://dev-be.koratona.stryber.io/api/"
      }
    },
    "preview:device": {
      "extends": "preview",
      "ios": {
        "image": "latest",
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_BASE_API_URL_DEV": "https://dev-be.koratona.stryber.io/api/",
        "EXPO_PUBLIC_BASE_API_URL_PROD": "https://dev-be.koratona.stryber.io/api/"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "image": "default",
        "buildType": "app-bundle"
      },
      "ios": {
        "image": "latest",
        "buildConfiguration": "Release",
        "simulator": false
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "../path/to/api-xxx-yyy-zzz.json",
        "track": "internal"
      },
      "ios": {
        "appleId": "vladyslav.levchenko@stryber.com",
        "ascAppId": "6473923229",
        "appleTeamId": "NSST29B577"
      }
    }
  }
}
